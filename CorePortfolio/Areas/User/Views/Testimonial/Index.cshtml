@using EntityLayer.Concrete;
@model Testimonial
@{
    ViewData["Title"] = "Referans Yorumlarım";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Yorumlarım</h4>
                <p class="description">Yorumunuzu Paylaşırken Ad Soyad Bölümü Kullanıcı Bilgilerinizle Aynı Olmalıdır.</p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Şirket</th>
                                <th>Pozisyon</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tbody>
                                @if (Model == null)
                                {
                                    <tr>
                                    <td style="font-weight:bold;">Hiç Yorumunuz Bulunmamaktadır.Yorum Yapmak İçin <a href="/User/Testimonial/Add">Tıklayınız</a></td>
                                    </tr>
                                }
                                else
                                {
                                    
                                    <tr>

                                        <td>@Model.ClientName</td>
                                        <td>@Model.Company</td>
                                        <td>@Model.Title</td>

                                        <td>

                                        <a href="/User/Testimonial/Delete/@Model.TestimonialID" class="btn btn-danger btn-sm">Sil</a>
                                        <a href="/User/Testimonial/Update/@Model.TestimonialID" class="btn btn-info btn-sm">Güncelle</a>
                                        <a href="/User/Testimonial/TestimonialDetails/@Model.TestimonialID" class="btn btn-primary btn-sm">İncele</a>
                                        </td>



                                    </tr>
                                    
                                }
                                
                        </tbody>
                      
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

