@using EntityLayer.Concrete;
@model WriterMessage
@{
    ViewData["Title"] = "Giden Kutusu Detayları";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <h4>@Model.Subject</h4>
            <p style="margin-top:20px" class="text-muted">@Model.Content</p>
            <p class="text-muted"><small>@Model.SenderName adlı @Model.Sender tarafından @Model.Date tarihinde gönderilmiştir.</small></p>



        </div>
    </div>
</div>
