@using EntityLayer.Concrete;
@model Feature
@{
    ViewData["Title"] = "Öne Çıkanlar Güncelle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<form action="@Url.Action("UpdateFeature","Feature")" method="post">
    <div class="col-lg-12">
        <input type="hidden" name="FeatureID" value="@Model.FeatureID" />
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Header">Başlık 1</label>
                <input required type="text" class="form-control" id="Header" name="Header"  value="@Model.Header">
            </div>
            <div class="form-group col-md-4">
                <label for="Name">Ad Soyad</label>
                <input required type="text" class="form-control" id="Name" name="Name"  value="@Model.Name">
            </div>
            <div class="form-group col-md-4">
                <label for="Title">Başlık 2</label>
                <input required type="text" class="form-control" id="Title" name="Title"  value="@Model.Title">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-info">Kaydet</button>
            </div>
        </div>
    </div>

</form>

