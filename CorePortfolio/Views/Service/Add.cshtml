@{
    ViewData["Title"] = "Hizmet Ekle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<form action="@Url.Action("AddService","Service")" method="post">
    <div class="col-lg-12">
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Title">Başlık</label>
                <input required type="text" class="form-control" id="Title" name="Title" placeholder="Örn: Dinamik Web Tasarımı">
            </div>
            <div class="form-group col-md-4">
                <label for="ImageUrl">Resim Yolu</label>
                <input required type="text" class="form-control" id="ImageUrl" name="ImageUrl">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </div>
        </div>
    </div>

</form>
