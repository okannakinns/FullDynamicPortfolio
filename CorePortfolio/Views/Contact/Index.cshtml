@using EntityLayer.Concrete;
@model Contact
@{
    ViewData["Title"] = "İletişim Güncelle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<form action="@Url.Action("UpdateContact","Contact")" method="post">
    <div class="col-lg-12">
        <input type="hidden" name="ContactID" value="@Model.ContactID" />
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Title">Başlık</label>
                <input required type="text" class="form-control" id="Title" name="Title" value="@Model.Title">
            </div>
            <div class="form-group col-md-4">
                <label for="Mail">Mail</label>
                <input required type="text" class="form-control" id="Mail" name="Mail" value="@Model.Mail">
            </div>
            <div class="form-group col-md-4">
                <label for="Phone">Telefon</label>
                <input required type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <label for="Description">Açıklama</label>
                <textarea required type="text" class="form-control" id="Description" name="Description" rows="3" maxlength="350">@Model.Description</textarea>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </div>
        </div>
    </div>

</form>

