<div class="row">
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5><a href="AdminMessage/ReceiverMessageList/Index">Gelen Kutusu</a></h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.ReceiverMsg</h2>
                            <p class="text-success ml-2 mb-0 font-weight-medium">Bugün @ViewBag.TodayReceiverMsg Yeni</p>
                        </div>
                        <h6 class="text-muted font-weight-normal">Kayıtlı Kullanıcı Mesajları</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-message-text text-success ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5><a href="AdminMessage/SenderMessageList/Index">Giden Kutusu</a></h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.SenderMsg</h2>
                            <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                        </div>
                        <h6 class="text-muted font-weight-normal">Kayıtlı Kullanıcı Mesajları</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-message-text text-primary ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5><a href="ContactMessage/Index">İletişim Mesajları</a></h5>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.ContactMsg</h2>
                            <p class="text-danger ml-2 mb-0 font-weight-medium">Bugün @ViewBag.TodayContactMsg Yeni</p>
                        </div>
                        <h6 class="text-muted font-weight-normal">İletişim Mesajları</h6>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-message-text text-danger ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>