@using EntityLayer.Concrete;
@model List<Message>

 <div class="col-md-6 col-xl-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-row justify-content-between">
                    <h4 class="card-title">Son Mesajlar</h4>
                <p class="text-muted mb-1 small"><a href="/ContactMessage/Index">Hepsini Gör</a></p>
                </div>
            @foreach (var item in Model)
            {
                <div class="preview-list">
                    <div class="preview-item border-bottom">
                        @*<div class="preview-thumbnail">
                            <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face6.jpg" alt="image" class="rounded-circle" />
                        </div>*@
                        <div class="preview-item-content d-flex flex-grow">
                            
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@item.Name</h6>
                                    <p class="text-muted text-small">@item.Date.ToString("dd MMM yyyy")</p>
                                </div>
                               
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <p class="text-muted">@item.Mail</p>
                                    <p class="text-muted text-small"><a href="/ContactMessage/ContactMessageDetails/@item.MessageID">Detaylı İncele</a></p>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            }

            </div>
        </div>
    </div>

    

