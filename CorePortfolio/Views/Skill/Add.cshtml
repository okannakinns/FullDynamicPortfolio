
@{
    ViewData["Title"] = "Yetenek Ekle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<form action="@Url.Action("AddSkill","Skill")" method="post">
   <div class="col-lg-8">
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Title">Başlık</label>
                <input required type="text" class="form-control" id="Title" name="Title">
            </div>
            <div class="form-group col-md-2">
                <label for="Value">Oran</label>
                <input required type="text" class="form-control" id="Value" name="Value" minlenght="1" maxlength="3" onkeypress="return event.charCode >= 48 && event.charCode <= 57" placeholder="%">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </div>
        </div>
   </div>
   
</form>
