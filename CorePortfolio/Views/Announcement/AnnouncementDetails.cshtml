@using EntityLayer.Concrete;
@model Announcement
@{
    ViewData["Title"] = "Duyuru Detayları";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <p class="description">@Model.Content</p>
            <p class="text-muted"><small><b>Duyuru Tarihi:</b> @Model.Date.ToString("dd MMM yyyy")  @Model.Date.ToString("HH:mm") </small></p>

        </div>
    </div>
</div>

