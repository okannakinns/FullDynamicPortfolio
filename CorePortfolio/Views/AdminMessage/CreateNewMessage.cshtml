@using EntityLayer.Concrete;
@model List<WriterMessage>
@{
    ViewData["Title"] = "Mesaj Oluştur";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Oluştur</h4>
                <p class="card-description">
                    Aşağıdaki yerleri doldurarak yeni mesaj gönderebilirsiniz.
                </p>
                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <div class="col-md-6">
                            <label for="Received">Alıcı Adresi</label>
                            <input type="text" class="form-control" id="exampleInputUsername1" name="Receiver" placeholder="Alıcı Mail Adresi">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label for="Subject">Konu</label>
                            <input type="text" class="form-control" id="exampleInputUsername1" name="Subject" placeholder="Konu">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <label for="Content">İçerik</label>
                            <textarea type="text" class="form-control" id="exampleInputUsername1" rows="3" maxlength="400" minlenght="20" name="Content" placeholder="İçerik"></textarea>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <button type="submit" class="btn btn-outline-primary mr-2">Kaydet</button>
                        <button class="btn btn-outline-light" asp-controller="AdminMessage" asp-action="SenderMessageList">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
