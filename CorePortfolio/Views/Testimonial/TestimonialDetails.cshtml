@using EntityLayer.Concrete;
@model Testimonial
@{
    ViewData["Title"] = "Referans Detayları";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcı Yorum Detayları</h4>
            <p class="description">@Model.Comment</p>
            <p class="text-muted"><small><b>Yorum Sahibi Adı Soyadı:</b> @Model.ClientName <br /><b>Pozisyonu/Şirketi:</b> @Model.Title/@Model.Company <br /> <b>Gönderilme Tarihi:</b> @Model.CreationDate.ToString("dd MMM yyyy")  @Model.CreationDate.ToString("HH:mm") </small></p>

        </div>
    </div>
</div>
