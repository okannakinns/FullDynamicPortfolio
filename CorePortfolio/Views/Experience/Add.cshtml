@{
    ViewData["Title"] = "Deneyim Ekle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<form action="@Url.Action("AddExperience","Experience")" method="post">
    <div class="col-lg-12">
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Name">Alan</label>
                <input required type="text" class="form-control" id="Name" name="Name" placeholder="Örn: Yazılım Uzmanı">
            </div>
            <div class="form-group col-md-4">
                <label for="Date">Firma/Tarih</label>
                <input required type="text" class="form-control" id="Date" name="Date" placeholder="xxxx Şirketi(08.2020-08.2023)">
            </div>
            <div class="form-group col-md-4">
                <label for="ImageUrl">Resim</label>
                <input required type="text" class="form-control" id="ImageUrl" name="ImageUrl">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <label for="Description">Açıklama</label>
                <textarea required class="form-control" id="Description" name="Description" rows="3" maxlenght="250"></textarea>
            </div>
            </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </div>
        </div>
    </div>

</form>
