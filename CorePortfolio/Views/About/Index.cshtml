@using EntityLayer.Concrete;
@model About
@{
    ViewData["Title"] = "Hakkımda Güncelle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<form action="@Url.Action("UpdateAbout","About")" method="post">
    <div class="col-lg-12">
        <input type="hidden" name="AboutID" value="@Model.AboutID" />
        <div class="row">
            <div class="form-group col-md-4">
                <label for="Title">Başlık</label>
                <input required type="text" class="form-control" id="Title" name="Title"  value="@Model.Title">
            </div>
            <div class="form-group col-md-4">
                <label for="ImageUrl">Resim Yolu</label>
                <input required type="text" class="form-control" id="ImageUrl" name="ImageUrl"  value="@Model.ImageUrl">
            </div>
            <div class="form-group col-md-4">
                <label for="Phone">Telefon</label>
                <input required type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <label for="Description">Açıklama</label>
                <textarea required type="text" class="form-control" id="Description" name="Description" rows="3" maxlength="350">@Model.Description</textarea>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-2">
                <label for="Age">Yaş</label>
                <input required type="text" class="form-control" id="Age" name="Age" value="@Model.Age">
            </div>
            <div class="form-group col-md-6">
                <label for="Mail">Mail</label>
                <input required type="text" class="form-control" id="Mail" name="Mail" value="@Model.Mail">
            </div>
            <div class="form-group col-md-4">
                <label for="Mail">Address</label>
                <input required type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </div>
        </div>
    </div>

</form>

